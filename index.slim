doctype html
html lang='en'
  head
    title Craftman
    meta charset='UTF-8'
    link rel="icon" type="image/png" href="img/favicon.png"

    link rel='stylesheet' href='fotorama.css'
    link rel='stylesheet' href='style.css'

    script src='lookbookItems.js'
    script src='manifiests.js'
    script src='jq.js'
    script src='msnr.js'
